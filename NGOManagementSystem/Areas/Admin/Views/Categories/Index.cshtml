@model IEnumerable<NGOManagementSystem.Models.Category>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a class="btn btn-dark" asp-action="Create">Create New Campaign</a>
</p>
<br/>
<table class="table">
    <thead>
        <tr style="background-color:lightblue">
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr style="background-color:lightgray">
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
